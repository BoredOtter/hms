{
  "version": 3,
  "timeout": "3s",
  "endpoints":[
  {
    "endpoint": "api/v1/health",
    "extra_config": {
      "auth/validator": {
        "alg": "RS256",
        "jwk_url": "http://keycloak:8080/realms/hms/protocol/openid-connect/certs",
        "disable_jwk_security": true,
        "roles_key": "realm_access.roles",
        "roles": ["admin"],
        "roles_key_is_nested": true
      }
    },
    "backend": [
        {
          "host":["http://localhost:8080"],
          "url_pattern": "/__health"
        }
    ]
  },
  {
    "endpoint": "api/v1/validator",
    "input_headers":[
        "*"
    ],
    "extra_config": {
      "auth/validator": {
        "alg": "RS256",
        "jwk_url": "http://keycloak:8080/realms/hms/protocol/openid-connect/certs",
        "disable_jwk_security": true
      }
    },
    "backend": [
      {
        "host":["http://validator:8000"],
        "url_pattern": "/api/v1"
      }
    ]
  },
  {
    "endpoint": "api/v1/patients",
    "input_headers":[
        "*"
    ],
    "extra_config": {
      "auth/patients": {
        "alg": "RS256",
        "jwk_url": "http://keycloak:8080/realms/hms/protocol/openid-connect/certs",
        "disable_jwk_security": true
      }
    },
    "backend": [
      {
        "host":["http://patients:8001"],
        "url_pattern": "/api/v1"
      }
    ]
  },
  {
    "endpoint": "api/v1/resources",
    "input_headers":[
        "*"
    ],
    "extra_config": {
      "auth/resources": {
        "alg": "RS256",
        "jwk_url": "http://keycloak:8080/realms/hms/protocol/openid-connect/certs",
        "disable_jwk_security": true
      }
    },
    "backend": [
      {
        "host":["http://resources:8002"],
        "url_pattern": "/api/v1"
      }
    ]
  }  
  ]
}